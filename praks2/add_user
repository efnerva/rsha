#!/bin/bash
#add user, no password, add home directotory

#specify the name of the in which usernames are specified
filename=$1
#specify the name of the file in which users passwords are specified
filepass=$2

paste -d":" $filename $filepass > users.tmp

for rida in `cat users.tmp`
do
	name=`echo $rida | cut -f1 -d:`
	sudo useradd -m $name
	echo "$rida" | chpasswd
	echo "User $nameâ€™s password changed!"
done
