#root kasutajana
apt-get install git
#tavakasutajana emsakondsel kasutamisel

a) seadista kasutajanimi, email, editor
git config --global user.name "Ees Perenimi"
´git config --global user.email ef-nei-net.nerva@khk.ee
git config --global core.editor vim

b) loo kataloog, kus hakkad skriptima
mkdir rsha

c) sisene kausta
cd rsha

d)tekita lokaalne repositoorium git süsteemi jaoks antud kaustas
git init

# remote seadistamine
a) git remote add nimi aadress
git remote add skriptimine https://github.com/kasutajanimi/reponimi.git

b) git remote kontroll
git remote -v
